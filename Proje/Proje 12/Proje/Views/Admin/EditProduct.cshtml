@model Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Edit Product</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product</h6>
        </div>
        <div class="card-body">

            <form asp-controller="Admin" asp-action="EditProduct" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4">
                        <input type="hidden" name="Image" value="@Model.Image" />
                        <input type="hidden" name="ProductId" value="@Model.ProductId" />


                        <div class="form-group">
                            <label asp-for="ProductName"></label>
                            <input asp-for="ProductName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" />
                        </div>


                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="HtmlContent"></label>
                            <input asp-for="HtmlContent" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock"></label>
                            <input asp-for="Stock" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="ProductCategories[0].ProductId" value="@Model.ProductCategories[0].ProductId" />
                            <label asp-for="ProductCategories[0].CategoryId" id="CategoryId"></label>
                            <select class="form-control" asp-for="ProductCategories[0].CategoryId" id="CategoryId" asp-items="@ViewBag.Categories">

                                <option disabled selected value="">Select.</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label id="CoverPhoto"></label>
                            <img src="~/images/products/tn/@Model.Image" width="120" />
                            <div class="custom-file">

                                <input type="file" name="CoverPhoto" id="CoverPhoto" class="custom-file-input" />
                                <label class="custom-file-label" for="customFile">Choose Cover Photo</label>
                            </div>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="IsApproved" class="form-check-input">
                                Is Approved
                            </label>
                        </div>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="IsHome" class="form-check-input">
                                Is Home
                            </label>
                        </div>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="IsFeatured" class="form-check-input">
                                Is Featured
                            </label>
                        </div>

                    </div>
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-7">
                        <div class="row">
                            <input type="hidden" asp-for="Attributes[0].ProductId" value="@Model.Attributes[0].ProductId" />
                            <input type="hidden" asp-for="Attributes[1].ProductId" value="@Model.Attributes[1].ProductId" />
                            <input type="hidden" asp-for="Attributes[2].ProductId" value="@Model.Attributes[2].ProductId" />
                            <input type="hidden" asp-for="Attributes[3].ProductId" value="@Model.Attributes[3].ProductId" />
                            <input type="hidden" asp-for="Attributes[0].ProductAttributeId" value="@Model.Attributes[0].ProductAttributeId" />
                            <input type="hidden" asp-for="Attributes[1].ProductAttributeId" value="@Model.Attributes[1].ProductAttributeId" />
                            <input type="hidden" asp-for="Attributes[2].ProductAttributeId" value="@Model.Attributes[2].ProductAttributeId" />
                            <input type="hidden" asp-for="Attributes[3].ProductAttributeId" value="@Model.Attributes[3].ProductAttributeId" />
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label asp-for="Attributes[0].Attribute"></label>
                                    <input asp-for="Attributes[0].Attribute" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Attributes[1].Attribute"></label>
                                    <input asp-for="Attributes[1].Attribute" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Attributes[2].Attribute"></label>
                                    <input asp-for="Attributes[2].Attribute" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Attributes[3].Attribute"></label>
                                    <input asp-for="Attributes[3].Attribute" class="form-control" />
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Attributes[0].Value"></label>
                                    <input asp-for="Attributes[0].Value" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Attributes[1].Value"></label>
                                    <input asp-for="Attributes[1].Value" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Attributes[2].Value"></label>
                                    <input asp-for="Attributes[2].Value" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Attributes[3].Value"></label>
                                    <input asp-for="Attributes[3].Value" class="form-control" />
                                </div>

                            </div>

                        </div>

                        <div class="container">
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save" />
                        </div>

                    </div>

                </div>
            </form>
        </div>
    </div>

</div>


