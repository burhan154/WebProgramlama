@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model LoginModel
@{
    ViewData["Title"] = "Login";
}



<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <section class="row d-flex justify-content-center align-items-center mt-lg-5">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0 shadow-lg">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-1">
                                    <div class="text-center">
                                        <h4 class="mt-1 mb-5 pb-1">@localizer["Welcome Back!"]</h4>
                                    </div>

                                    <div class="text-danger" asp-validation-summary="All"></div>
                                    <form asp-action="Login" method="post">
                                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                                        <div class="form-group">
                                            <label asp-for="Email">@localizer["E-mail"]</label>
                                            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@localizer["Enter E-mail"]">

                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Password">@localizer["Password"]</label>
                                            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="@localizer["Enter Password"]">
                                            <small id="emailHelp" class="form-text text-muted">@localizer["We'll never share your password with anyone else."]</small>
                                        </div>

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button type="submit" class="btn btn-primary btn-block fa-lg login-color mb-3">@localizer["Sign in"]</button>
                                        </div>

                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex justify-content-center align-items-center login-color text-center">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4 justify-content-center">
                                    <h4 class="mb-4">@localizer["Welcome to Login"]</h4>
                                    <p class="mb-0 me-2">@localizer["Don't have an account?"]</p>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <a class="btn btn-danger btn-block fa-lg mb-3 mt-lg-5" asp-area="" asp-controller="User" asp-action="Register" role="button">@localizer["Sign Up"]</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

