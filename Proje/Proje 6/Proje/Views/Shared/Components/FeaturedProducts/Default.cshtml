@model IEnumerable<Product>



<div class="aside">
    <h3 class="aside-title">Featured</h3>

    @foreach (var item in Model)
    {
        <div class="product-widget">
            <div class="product-img">
                <img src="/images/products/tn/@item.Image" alt="">
            </div>
            <div class="product-body">
                <p class="product-category">@item.ProductCategories</p>
                <h3 class="product-name"><a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="product-title">@item.ProductName</a></h3>
                <h4 class="product-price">$@item.Price</h4>
            </div>
        </div>
    }
    </div>